# AgentAuth Self-Hosted Deployment Environment
# Copy to .env and customize

# ============================================================
# Required Settings
# ============================================================

# Database
DB_PASSWORD=your-secure-database-password
DATABASE_URL=postgresql+asyncpg://agentauth:${DB_PASSWORD}@postgres:5432/agentauth

# Security
SECRET_KEY=generate-a-64-char-secret-key-here

# Environment
ENVIRONMENT=production
DEBUG=false

# ============================================================
# Port Configuration
# ============================================================

PORT=8000
DB_PORT=5432
REDIS_PORT=6379
OPA_PORT=8181
JAEGER_UI_PORT=16686

# ============================================================
# Optional: Stripe
# ============================================================

STRIPE_SECRET_KEY=sk_live_xxx
STRIPE_PUBLISHABLE_KEY=pk_live_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx

# ============================================================
# Optional: Tracing (OpenTelemetry)
# ============================================================

OTEL_EXPORTER_OTLP_ENDPOINT=http://jaeger:4317

# ============================================================
# Optional: External Redis (instead of Docker)
# ============================================================

# REDIS_URL=rediss://default:xxx@your-redis.upstash.io:6379
# REDIS_SSL=true
